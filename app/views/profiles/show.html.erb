<div class="page-header">
  <h2><%= @profile.name %></h2>
</div>

<p class="lead">
<%= @profile.age %> / <%= @profile.gender %> / <%= @profile.city %> / <%= @profile.country %>
</p>



<%@profile.answers.each do |answer|%>
  <% if (answer.option_id or answer.explanation.length>0) %> 
    <div class="well">
      <p>
      <%=answer.question%> <b><%=answer.chosen_option%></b>
      </p>
      <% if answer.explanation.length > 0 %>
        <p>
        -- <%=sanitize answer.explanation%>
        </p>
      <%end%>
    </div>
    <hr>
  <%end%>
<%end%>

<%@profile.user_questions.each do |answer|%>
  <div class="well">
    <p>
    <%=sanitize answer.question%>
    </p>
    <p>
    -- <%=sanitize answer.explanation%>
    </p>
  </div>
  <hr>
<%end%>

<%@profile.web_links.each do |link|%>
  <%if link.link_url.length>0 %>
    <dl class="dl-horizontal">
      <dt><%=link.link_type%></dt>
      <dd> <%= link_to link.link_url, link.link_url%></dd>
    </dl>
  <%end%>
<%end%>

<div class="btn">
  <%= link_to 'Back', profiles_path %>
</div>
