<div class="control-group">
  <%= f.label :option, 'Answer Option', class: 'control-label' %>
  <div class="controls">
    <%= f.text_field :option, :class => 'input-block-level' %>
  </div>
</div>

<% unless f.object.nil? || f.object.new_record? %>
  <div class="control-group">
    <%= f.label :_destroy, 'Remove: ', :class => 'control-label' %>
    <div class="controls">
    <%= f.check_box :_destroy, :class => 'check-box' %>
    </div>
  </div>
<% end %>
