<div class="control-group well">
  <%= f.label :question, class: 'control-label' %>
  <%= f.text_area :question, class: 'input-xxlarge', rows: 3 %>
  <%= f.label :answer, class: 'control-label' %>
  <%= f.text_area :explanation, class: 'input-block-level', rows: 9 %>

<% unless f.object.nil? || f.object.new_record? %>
  <div class="control-group">
    <%= f.label :_destroy, 'Remove: ', :class => 'control-label' %>
    <%= f.check_box :_destroy, {:class => 'check-box'} %>
  </div>
<% end %>
</div>
