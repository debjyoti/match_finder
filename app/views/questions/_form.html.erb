<%= form_for @question, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :question, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :question, :class => 'input-block-level', rows: 5 %>
    </div>
  </div>

  <div class="control-group">
    <%= f.fields_for :options do |option_form| %>
      <%= render :partial => 'options/form', :locals => {f: option_form} %>
    <%end%>
    <%= link_to_add_fields "Add Option", f, :options %>
  </div>


  <div class="control-group">
    <%= f.label :weight, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :weight, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :category, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :category, :class => 'text_field', placeholder: 'all / male / female' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                questions_path, :class => 'btn' %>
  </div>
<% end %>
