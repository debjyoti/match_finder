<!DOCTYPE html>
<html>

  <head>
    <title>MatchFinder</title>
    <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
    <![endif]-->
    <%= stylesheet_link_tag    "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  </head>

  <body>

    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">

          <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </a>

          <a class="brand" href="#">Match Finder</a>
          <ul class="nav pull-right">
            <li> <%= link_to "About", about_path%> </li>
            <li class="divider-vertical"></li>
            <li><%= link_to "Browse", profiles_path %> </li>
            <li class="divider-vertical"></li>
            <% if user_signed_in? %>
              <% if current_user.profile.id%>
                <li><%= link_to current_user.username.capitalize, profile_path(current_user.profile.id) %> </li>
                <li class="divider-vertical"></li>
                <li><%= link_to "Edit Profile", edit_profile_path(current_user.profile.id) %> </li>
              <%else%>
                <li><%= link_to "Create Profile", new_profile_path %> </li>
              <%end%>
              <li class="divider-vertical"></li>
              <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
            <%else%>
              <li> <%= link_to "Register", new_user_registration_path %> </li>
              <li class="divider-vertical"></li>
              <li> <%= link_to "Sign In", new_user_session_path%> </li>
            <%end%>
          </ul>

        </div>
      </div>
    </div>

    <% if notice or alert %>
      <div class="alert">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <%= notice %>
        <%= alert %>
      </div>
    <%end%>


    <div class="container-fluid">

      <div class="row">
        <div class="span1"></div>
        <div class="span8">
          <%= yield %>
        </div>
        <div class="span3"></div>
      </div>

    </div>

    <ul class="navbar-text">
      <!--<li> <%= link_to "Contact Us", contact_us_path%> </li> -->
    </ul>


  </body>
</html>
