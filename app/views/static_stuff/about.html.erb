<% unless user_signed_in? %>
  <% content_for :sign_in_panel do %>
    <div class="container-fluid pull-right">
      <div class='lead'> Sign In </div>
      <%= form_for("user", :url => user_session_path) do |f| %>
        <div><%= f.label :login %>
          <%= f.text_field :login, placeholder: 'Username or Email' %> </div>
        <div><%= f.label :password %>
          <%= f.password_field :password%> </div>
        <br/>
        <div><%= f.submit 'Sign in' %></div>
        <div><%= link_to "Forgot your password?", new_password_path('user') %></div>
        <div><%= link_to "Don't have an account?", new_user_registration_path %></div>
      <% end %>
    </div>
  <% end %>
<% end %>
